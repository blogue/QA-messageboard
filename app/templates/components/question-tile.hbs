<h2>{{question.topic}} | Answers: {{answerCount}}</h2>
<hr>
<h4>{{question.author}} | {{dateDisplay question.date}}</h4>
<hr>
<p>{{question.content}}</p>
<hr>
<h3>Answers:</h3>
<ul>
  {{#each question.answers as |answer|}}
  <h4>{{answer.author}} | {{answer.date}}</h4>
  <hr>
  <p>{{answer.content}}</p>
  <hr>
  {{/each}}
</ul>
